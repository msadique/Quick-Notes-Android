<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images_2"
    tools:context="com.sadique.quicknotes.MainActivity">

    <TextView
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:id="@+id/textView3"
        tools:textSize="20sp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Last Update:"
        android:textColor="@android:color/black"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="172dp"
        android:id="@+id/date_id"
        android:textSize="16sp"
        android:layout_height="30dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:id="@+id/notes_id"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/focus_sytle"
        android:text="These are my notes:-"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/date_id"
        app:layout_constraintHorizontal_bias="0.4" />

</android.support.constraint.ConstraintLayout>
